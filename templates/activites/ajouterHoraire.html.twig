{% include "adherent/entete.html.twig" %}
{% block content %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Horaire</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    </head>
    <body>
    <br>
    <div class="container">
    <h1 class="display-6"><strong><u>Attribution horaires</u></strong></h1><br>


{{ form_start(form) }}

<div class="alert alert-primary" role="alert">
  <label class="form-label">Jour<label style="color:red;">*</label></label>
    {{ form_widget(form.jour, {'attr': {'class': 'form-control', 'placeholder' : 'Mercredi'}})}}<br>
        
  <label class="form-label">Heure de début<label style="color:red;">*</label></label>
    {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control', 'placeholder' : '12h00'}})}}<br>
      
  <label class="form-label">Heure de fin<label style="color:red;">*</label></label>
    {{ form_widget(form.dateFin, {'attr': {'class': 'form-control', 'placeholder' : '14h00'}})}}<br>

    <label class="form-label">Activités<label style="color:red;">*</label></label>
    {{ form_widget(form.activites, {'attr': {'class': 'form-control'}})}}<br>
      
<br>
<div class="col-12">
  {{ form_widget(form.enregistrer, {'attr': {'class': 'btn btn-primary'}})}}
</div>

{{ form_end(form) }}
<label style="color:red;">* champ obligatoire</label>


      </div><br><br><br>
	<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    </body>
</html>
{% endblock %}