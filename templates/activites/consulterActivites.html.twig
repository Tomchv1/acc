{% include "adherent/entete.html.twig" %}
{% block content %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title></title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    </head>
    <body>
    <br>
    <div class="container">
    <h1 class="display-6"><strong><u>{{pActivite.libelle}}</u></strong></h1><br>
      <ul class="list-group">
        <li class="list-group-item">Âge minimum : <strong>{{pActivite.ageMin}} ans</strong></li>
        <li class="list-group-item">Âge maximum : <strong>{{pActivite.ageMax}} ans</strong></li>
        <li class="list-group-item">Tarif Courseullais : <strong>{{pActivite.tarifCours}}€</strong></li>
        <li class="list-group-item">Tarif Hors-commune : <strong>{{pActivite.tarifHorsCours}}€</strong></li>
      </ul><br><br>


    <h1 class="display-6"><strong><u>Horaire(s)</u></strong></h1>
<div class="card-group">
  {% for horaire in pActivite.horaires %}
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">{{horaire.jour}}</h5>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">De {{horaire.dateDebut}} à {{horaire.dateFin}}</li>
          <li class="list-group-item"><a href="{{ path('horaire-modifier', { 'horaire_id': horaire.id }) }}"><button type="button" class="btn btn-primary">Modifier</button></a></li>
      </ul>
    </div>
  </div>
  {% endfor %}
</div>
<br>
<a href="{{ path('horaire-ajouter') }}"><button type="button" class="btn btn-primary">Ajouter une horaire</button></a>
<br><br>

<h1 class="display-6"><strong><u>Inscrit(s)</u></strong></h1>
<ul class="list-group">
  {% for adherent in pActivite.adherent %}
        <li class="list-group-item">{{adherent.id}} - {{adherent.nom}} {{adherent.prenom}} - {{adherent.dateNaissance}}</li>
  {% endfor %}
      </ul><br><br>




    </div>
	<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    </body>
</html>
{% endblock %}