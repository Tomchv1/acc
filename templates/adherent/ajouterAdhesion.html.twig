{% include "adherent/entete.html.twig" %}
{% block content %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Adhesion</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    </head>
    <body>
    <br>
    <div class="container">
    <h1 class="display-6"><strong><u>Nouvelle adhésion</u></strong></h1><br>

      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>ATTENTION !</strong> Il est obligatoire d'ajouter une adhesion avant de créer votre adhérent !
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>


{{ form_start(form) }}

<div class="alert alert-secondary" role="alert">
<div class="alert alert-primary" role="alert">
  <label class="form-label">Banque</label>
    {{ form_widget(form.banque, {'attr': {'class': 'form-control'}})}}<br>

  <label class="form-label">Année d'adhesion</label>
    {{ form_widget(form.annee, {'attr': {'class': 'form-control'}})}}<br>
</div><br><br>
<div class="alert alert-primary" role="alert">
  <label class="form-label">Montant total</label>
    {{ form_widget(form.montantTotal, {'attr': {'class': 'form-control'}})}}<br>
</div><br><br>
<div class="alert alert-primary" role="alert">
  <label class="form-label">Montant carte bancaire</label>
    {{ form_widget(form.montantCb, {'attr': {'class': 'form-control'}})}}<br>

  <label class="form-label">Montant prélévement SEPA</label>
    {{ form_widget(form.montantSepa, {'attr': {'class': 'form-control'}})}}<br>

  <label class="form-label">Montant ANCV</label>
    {{ form_widget(form.montantAncv, {'attr': {'class': 'form-control'}})}}<br>

  <label class="form-label">Montant carte atout Normandie</label>
    {{ form_widget(form.montantCan, {'attr': {'class': 'form-control'}})}}<br>

  <label class="form-label">Montant chèque</label>
    {{ form_widget(form.montantCheque, {'attr': {'class': 'form-control'}})}}<br>

  <label class="form-label">Montant autre</label>
    {{ form_widget(form.montantAutre, {'attr': {'class': 'form-control'}})}}<br>

  <label class="form-label">Commentaire</label>
    {{ form_widget(form.commentaire, {'attr': {'class': 'form-control'}})}}<br>

<br>
<div class="col-12">
  {{ form_widget(form.enregistrer, {'attr': {'class': 'btn btn-primary'}})}}
</div>
</div>
{{ form_end(form) }}


  </div><br><br><br>
	<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    </body>
</html>
{% endblock %}