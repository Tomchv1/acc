{% include "adherent/entete.html.twig" %}
{% block content %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Adhérent</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    </head>
    <body>
    <br>
    <div class="container">
    <h1 class="display-6"><strong><u>Adhérent</u></strong></h1>

<div class="card-group">
  <div class="card">
    <img src="https://img.icons8.com/cotton/512/000000/conference-call.png" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title">{{consulter.nom}} {{consulter.prenom}}</h5>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Date de naissance : {{consulter.dateNaissance}}</li>
          <li class="list-group-item">Année d'adhesion : {{consulter.adhesion.annee.libelle}}</li>
      </ul>
    </div>
  </div>

  <div class="card">
    <img src="https://img.icons8.com/wired/512/000000/price-tag-euro.png" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title">Informations côtisations</h5>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Montant à régler : {{consulter.adhesion.montantARegler}}€</li>
          <li class="list-group-item">Montant réglé : {{consulter.adhesion.montantRegle}}€</li>
          <li class="list-group-item">Banque : {{consulter.adhesion.banque}}</li>
        </ul>
    </div>
  </div>

  <div class="card">
    <img src="https://img.icons8.com/ios-filled/500/000000/to-do.png" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title">Activité(s)</h5>
        <ul class="list-group list-group-flush">
          {% for adherent in consulter %}
            <li class="list-group-item">{{consulter.activites.id}}</li>
          {% endfor %}
        </ul>
    </div>
  </div>
</div>

    </div>
	<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    </body>
</html>
{% endblock %}