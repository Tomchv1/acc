{% include "adherent/entete.html.twig" %}
{% block content %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Adhérent</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    </head>
    <body>
    <br>
    <div class="container">
    <h1 class="display-6"><strong><u>Adhérent</u></strong></h1>

<div class="card-group">
  <div class="card">
    <img src="https://img.icons8.com/ios/500/000000/face.png" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title">{{pAdherent.nom}} {{pAdherent.prenom}}</h5>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Date de naissance : {{pAdherent.dateNaissance}}</li>
          <li class="list-group-item">Année d'adhesion : {{pAdherent.adhesion.annee.libelle}}</li>
      </ul>
    </div>
  </div>

  <div class="card">
    <img src="https://img.icons8.com/ios/500/000000/euro-pound-exchange.png" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title">Informations côtisations</h5>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Montant à régler : {{pAdherent.adhesion.montantARegler}}€</li>
          <li class="list-group-item">Montant réglé : {{pAdherent.adhesion.montantRegle}}€</li>
          <li class="list-group-item">Banque : {{pAdherent.adhesion.banque}}</li>
          <li class="list-group-item"><a href="{{ path('adhesion-modifier', { 'adhesion_id': pAdherent.adhesion.id }) }}"><button type="button" class="btn btn-primary">Modifier</button></a></li>
        </ul>
    </div>
  </div>

  <div class="card">
    <img src="https://img.icons8.com/ios/500/000000/mommy-and-me-classes.png" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title">Activité(s)</h5>
        <ul class="list-group list-group-flush">
          {% for activite in pAdherent.activites %}
            <li class="list-group-item">{{activite.libelle}}</li>
          {% endfor %}
        </ul>
    </div>
  </div>
</div>
<br>
<br>

<h1 class="display-6"><strong><u>Responsable(s)</u></strong></h1>
<div class="card-group">
  {% for responsable in pAdherent.responsables %}
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">{{responsable.nom}} {{responsable.prenom}}</h5>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Téléphone : {{responsable.telephone}}</li>
          <li class="list-group-item">Portable : {{responsable.portable}}</li>
          <li class="list-group-item">E-Mail : {{responsable.mail}}</li>
          <li class="list-group-item">Adresse : {{responsable.adresse}} - {{responsable.ville}} {{responsable.cp}}</li>
      </ul>
    </div>
  </div>
  {% endfor %}
</div>

    </div>
	<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    </body>
</html>
{% endblock %}