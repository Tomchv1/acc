{% include "adherent/entete.html.twig" %}
{% block content %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Adhesion</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    </head>
    <body>
    <br>
    <div class="container">
<h1 class="display-6"><strong><u>Responsable</u></strong></h1>
<div class="card-group">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">{{pResponsable.nom}} {{pResponsable.prenom}}</h5>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Genre : {{pResponsable.genre}}</li>
          <li class="list-group-item">Téléphone : {{pResponsable.telephone}}</li>
          <li class="list-group-item">Portable : {{pResponsable.portable}}</li>
          <li class="list-group-item">E-Mail : {{pResponsable.mail}}</li>
          <li class="list-group-item">Adresse : {{pResponsable.adresse}}</li>
          <li class="list-group-item">Ville : {{pResponsable.ville}} {{pResponsable.cp}}</li>
      </ul>
    </div>
  </div>
</div>
<br>
<a href="{{ path('responsable-ajouter') }}"><button type="button" class="btn btn-primary">Ajouter un autre responsable</button></a>
<a href="{{ path('famille-ajouter') }}"><button type="button" class="btn btn-primary">Ajouter une famille</button></a>
<a href="{{ path('adhesion-ajouter') }}"><button type="button" class="btn btn-primary">Ajouter une adhesion</button></a>
<br>
<br>

<h1 class="display-6"><strong><u>Responsable de</u></strong></h1>
<div class="card-group"> 
  {% for adherent in pResponsable.adherent %}
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">{{adherent.nom}} {{adherent.prenom}}</h5>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Date de naissance : {{adherent.dateNaissance}}</li>
      </ul>
    </div>
  </div>
  {% endfor %}
</div>
<br>

    </div>
	<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    </body>
</html>
{% endblock %}